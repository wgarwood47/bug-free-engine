# Database
############

POSTGRES_DB=postgres
POSTGRES_PORT=5432

############
# API Configuration
############

# External URL where the API will be accessible
# Change this to your domain in production
API_EXTERNAL_URL=http://localhost:8000

# Your frontend application URL
# This is used for redirects after auth
SITE_URL=http://localhost:3000

# Additional redirect URLs (comma separated)
ADDITIONAL_REDIRECT_URLS=

############
# Auth Configuration
############

# Set to true to disable new user signups
DISABLE_SIGNUP=false

# Set to true to auto-confirm email signups (skip email verification)
ENABLE_EMAIL_AUTOCONFIRM=true

# Enable anonymous users
ENABLE_ANONYMOUS_USERS=false

# Enable email signup
ENABLE_EMAIL_SIGNUP=true

# JWT expiry in seconds (default: 3600 = 1 hour)
JWT_EXP=3600

# Rate limit for emails sent per hour
RATE_LIMIT_EMAIL_SENT=100

############
# SMTP Configuration (for sending emails)
# Leave empty to disable email sending
############

SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_ADMIN_EMAIL=
SMTP_SENDER_NAME=

############
# Studio Configuration
############

STUDIO_PORT=3001
STUDIO_DEFAULT_ORGANIZATION=Default Organization
STUDIO_DEFAULT_PROJECT=Default Project

############
# Kong API Gateway Ports
############

KONG_HTTP_PORT=8000
KONG_HTTPS_PORT=8443

############
# Optional Features
############

# Enable logs in Studio
ENABLE_LOGS=true

# Logflare API key (optional, for log analytics)
LOGFLARE_API_KEY=

# PostgREST schemas to expose
PGRST_DB_SCHEMAS=public,storage,graphql_public

# Image proxy settings
IMGPROXY_ENABLE_WEBP_DETECTION=true
